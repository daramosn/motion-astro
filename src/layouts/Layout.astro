---
import '../styles/globals.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Explore a gallery of creative motion demos showcasing various animation techniques for front-end development. Immerse yourself in a variety of captivating web animations. By Diego Ramos."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon" />
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/fontsource/fonts/bebas-neue@latest/latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <title>{title}</title>
  </head>

  <body data-theme="dark">
    <slot />
  </body>
</html>
